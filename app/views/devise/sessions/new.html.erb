
<div class="container">
<div class="row">
  <div class="col-lg-4 col-md-6 ml-auto mr-auto">
    <div class="card card-login">


<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'form') do |f| %>
  <%= devise_error_messages! %>

          <div class="card-header card-header-primary text-center">
            <h4 class="card-title">Log in</h4>
            <div class="social-line">
              <a href="#pablo" class="btn btn-just-icon btn-link">
                <i class="fa fa-facebook-square"></i>
              </a>
              <a href="#pablo" class="btn btn-just-icon btn-link">
                <i class="fa fa-twitter"></i>
              </a>
              <a href="#pablo" class="btn btn-just-icon btn-link">
                <i class="fa fa-google-plus"></i>
              </a>
            </div>
          </div>
          <p class="description text-center">Or Be Thoughful</p>
          <div class="card-body">


            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text">
                    <i class="material-icons">mail</i>
                </span>
              </div>
                <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email' %>
            </div>


            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text">
                    <i class="material-icons">lock_outline</i>
                </span>
              </div>

               <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Password' %>
            </div>


           
          </div>
          <div class="footer text-center">
              <%= f.button "Log In", type: 'submit', class: 'btn btn-primary btn-round', data: {data_disable: "<i class='fa fa-spinner fa-spin'> </i>Loggin you in"} %>

                   <br/>

                <%= render "devise/shared/links" %>
          </div>
        <% end %>



      </div>
  </div>
</div>
</div>

