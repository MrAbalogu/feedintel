<p id="notice"><%= notice %></p>

<h1>Report Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @report_categories.each do |report_category| %>
      <tr>
        <td><%= report_category.name %></td>
        <td><%= report_category.description %></td>
        <td><%= link_to 'Show', report_category %></td>
        <td><%= link_to 'Edit', edit_report_category_path(report_category) %></td>
        <td><%= link_to 'Destroy', report_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Report Category', new_report_category_path %>
